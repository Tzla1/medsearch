{
  "name": "med-search-backend",
  "version": "1.0.0",
  "description": "Backend para plataforma de búsqueda de especialistas médicos",
  "main": "dist/app.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "node build-analytics.js && tsc",
    "start": "node dist/app.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build:watch": "tsc --watch",
    "prebuild": "npm run clean",
    "clean": "rimraf dist/",
    "migrate": "chmod +x scripts/migrate.sh && ./scripts/migrate.sh",
    "setup": "chmod +x scripts/install.sh && ./scripts/install.sh",
    "seed": "ts-node src/scripts/seed-data.ts",
    "seed:dev": "NODE_ENV=development ts-node src/scripts/seed-data.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "postbuild": "echo '✅ Build completado exitosamente'"
  },
  "dependencies": {
    "@clerk/clerk-sdk-node": "^5.1.6",
    "@clerk/express": "^1.7.15",
    "@types/mongoose": "^5.11.97",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "mongoose": "^8.17.0",
    "moongose": "^1.0.0",
    "mysql2": "^3.6.0",
    "svix": "^1.70.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.4.2",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
